pipeline{
  agent any
  environment {
    PATH = "$PATH:/usr/share/maven/bin"
  }
  stages{
    stage('Build'){
      steps{
        sh 'mvn clean package'
            }
         }
    stage('SonarQube analysis') {
//    def scannerHome = tool 'SonarScanner 4.0';
        steps{
        withSonarQubeEnv('sonar') {
        sh "mvn sonar:sonar"          
    }
        }
        }
    stage('Deployment') {
      steps {
    // One or more steps need to be included within the steps block.
    deploy adapters: [tomcat9(credentialsId: 'addressbookdeployer_user', path: '', url: 'http://3.92.227.242:8070/')], contextPath: null, war: '**/*.war'
        }
    }
   
   }
}
